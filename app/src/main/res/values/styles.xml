<resources>
    <style name="Theme.ReleasePlayground" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/navy</item>
        <item name="colorPrimaryDark">@color/dark_navy</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="Widget.ReleasePlayground.Label" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="Widget.ReleasePlayground.Value" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
</resources>
